<link href="https://fonts.googleapis.com/css?family=Lato:300,400" rel="stylesheet">

<script type="text/javascript">
    setTimeout(function sunrise() {
        document.getElementsByClassName('header')[0].style.backgroundColor = '#118798';
    }, 0);
</script>

<section class="login_section">

    <div class="login_left">
        <div class="dark-overlay"></div>
        <div class="login_left_content">
            <figure><img src="/images/login_logo.png" alt=""></figure>
        </div>
    </div>

    <div class="login_right">
        <div class="login_right_content login_form">
            <h2>Sign In</h2>
            <form method="post" action="/api/admin/login">

                <div class="form-group">
                    <label>Username</label>
                    <div class="input_item">
                        <input type="text" name="email" class="form-control" placeholder="Username">
                        <i class="fas fa-user"></i>
                    </div>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <div class="input_item">
                        <input type="password" name="password" class="form-control" placeholder="Password">
                        <i class="fas fa-key"></i>
                    </div>
                </div>
                <% if(!logged && type == "ERR") { %>
                <div class="form-group">
                    <label style="color: red;"><%= message %></label>
                </div>
                    <% } %>

                    <div class="mb-xs text-center">
                        <button class="btn" type="submit">Sign in</button>
                    </div>
                </div>
            </form>
        </div>

        <p> <% if(!logged && type == "ERR") { %><%= message %><% } %></p>
        
        
     
        <p class="login_copy">Copyright © 2020. All Right Reserved.</p>
    </div>
</section>